{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true, 
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": false,

    /* Module Resolution Options */
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
